<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="Theme.RealWorld" parent="AppTheme">
        <item name="android:textViewStyle">@style/CustomNormalTextView</item>
        <item name="android:editTextStyle">@style/CustomNormalEditText</item>
        <item name="android:buttonStyle">@style/CustomNormalButton</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:checkboxStyle">@style/CustomNormalCheckBox</item>
        <item name="android:drawingCacheQuality">auto</item>
        <item name="android:listSelector">@drawable/bg_list_item</item>
        <item name="android:listDivider">@drawable/listitem_divide</item>
        <item name="android:colorBackground">#ff0000</item>
        <item name="android:colorForeground">#00ff00</item>
        
        <item name="CustomSpinnerStyle">@style/CustomSpinnerStyle</item>
        
        <!-- 
        <item name="android:windowBackground">@drawable/window_bg</item>
         -->
    </style>
    <style name="CustomSpinnerStyle">
        <item name="buttonTextColor">@color/black</item>
        <item name="itemTextColor">@color/blue</item>
        <item name="buttonBackgroundDrawable">@drawable/bg_spinner</item>
        <item name="itemBackgroundDrawable">@drawable/bg_list_item</item>
    </style>
    <style name="CustomNormalTextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="CustomNormalEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/my_edittext_bg</item>
        <item name="android:hint">@string/input_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/edittext_font_size</item>
    </style>
    
    <style name="CustomNormalButton" parent="@android:style/Widget.Button">
        
    </style>
    
    <style name="CustomNormalCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        
    </style>
    
    <style name="home_relative_layout">
        <item name="android:background">@drawable/relativelayout_selector_blue</item>
    </style>
    
    <style name="home_text_view">
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/bottom_tab_font_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@drawable/home_btn_bg</item>
        <item name="android:paddingTop">@dimen/bottom_tab_padding_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/bottom_tab_padding_drawable</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
    <style name="subtitle_tab_style">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@drawable/bg_subtitle_tab</item>
        <item name="android:paddingTop">@dimen/subtitle_tab_padding</item>
        <item name="android:paddingBottom">@dimen/subtitle_tab_padding</item>
        <item name="android:paddingRight">@dimen/subtitle_tab_padding</item>
        <item name="android:drawablePadding">@dimen/subtitle_tab_drawable_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
