    <style name="pop_tab_style">
        <item name="android:textSize">@dimen/text_normal_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:background">@color/home_tab_bg_normal</item>
        <item name="android:paddingTop">@dimen/pop_tab_padding</item>
        <item name="android:paddingBottom">@dimen/pop_tab_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>  
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/pop_tab_drawable_padding</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    
	<style name="pop_anim_in_up_to_down">    
		<!--   PopupWindow从上往下弹出的效果-->    
		<item name="android:windowEnterAnimation">@anim/pop_in_up_to_down</item>    
		<item name="android:windowExitAnimation">@anim/pop_out_down_to_up</item>    
	</style>   
	<style name="pop_anim_in_down_to_up">    
		<!--   PopupWindow从下往上弹出的效果-->    
		<item name="android:windowEnterAnimation">@anim/pop_in_down_to_up</item>    
		<item name="android:windowExitAnimation">@anim/pop_out_up_to_down</item>    
	</style>   
 
</resources>